<div class="text-center">
  <h4><%= t('.new') %></h4>
</div>
<div class="container h-100">
  <%= render partial: 'transfer_requests/components/errors' %>
  <div class="d-flex justify-content-center h-100">
    <div class="user-card-form">
      <%= form_with(model: [@transfer_request], local: true) do |form| %>
        <%= render partial: 'transfer_requests/components/form',
                   locals: { form: form } %>
        <div class="row btn-actions">
          <div class="col-lg-6 mt-3">
            <%= link_to t('.cancel'), transfer_requests_path, class: 'btn btn-sm btn-danger btn-user btn-block' %>
          </div>
          <div class="col-lg-6 mt-3">
            <button class="btn btn-primary btn-sm btn-block">
              <%= t('.create_new') %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
