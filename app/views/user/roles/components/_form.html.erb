<div class="col-lg-12">
  <%= form.label(:kind_cd) %>
  <% if user_master?(current_user) %>
    <%= form.select(:kind_cd, role_master_select, { include_blank: 'Selecione uma regra de usu치rio' }, { class: 'select2_single form-control' }) %>
  <% else %>
    <%= form.select(:kind_cd, role_select, { include_blank: 'Selecione uma regra de usu치rio' }, { class: 'select2_single form-control' }) %>
  <% end %>
</div>
<% if current_page?(new_user_role_path) || (request.method == 'POST' || 'GET') || user_master?(current_user) %>
  <div class="col-lg-12">
    <%= form.label(:enterprise_id) %>
    <%= form.collection_select(:enterprise_id, @enterprises, :id, :formatted_enterprises, { include_blank: 'Selecione uma empresa' }, { class: 'select2_single form-control', required: true }) %>
  </div>
  <div class="col-lg-12 d-flex">
    <div class="col-lg-10">
      <%= form.label(:user_id) %>
      <% if user_master?(current_user) %>
        <%= form.collection_select(:user_id, @users, :id, :full_information, { include_blank: 'Selecione um usu치rio' }, { class: 'select2_single form-control', required: true }) %>
      <% else %>
        <%= form.collection_select(:user_id, @users, :id, :full_name, { include_blank: 'Selecione um usu치rio' }, { class: 'select2_single form-control', required: true }) %>
      <% end %>
    </div>
    <div class="col-lg-2 m-t-5">
      <% if can?(:create, User) %>
        <%= link_to new_admins_user_path(@user), class: 'btn btn-sm btn-success btn-circle' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
