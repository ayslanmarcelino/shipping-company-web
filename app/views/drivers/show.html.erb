<div class="col-xs-12 text-center">
  <h4><%= t('.view') %>: <%= @driver.person.full_name %></h4>
</div>
<div class="col-xs-12 mb-2">
  <%= link_to :back, class: 'col-xs-3 btn btn-secondary btn-sm  btn-user' do %>
    <i class="fas fa-arrow-left"></i>
    <%= t('.back') %>
  <% end %>
  <% if can?(:update, Driver) %>
    <%= link_to edit_driver_path(@driver), class: 'col-xs-3 btn btn-info btn-sm  ' do %>
      <i class="fas fa-edit"></i>
      <%= t('.edit') %>
    <% end %>
  <% end %>
  <% if can?(:destroy, Driver) %>
    <%= link_to driver_path(@driver),
                method: :delete,
                class: 'btn btn-sm btn-danger',
                data: { confirm: "#{t('.delete_confirm')}: #{@driver.person.first_name} #{@driver.person.last_name}?" } do %>
      <i class="fas fa-trash"></i>
      <%= t('.delete') %>
    <% end %>
  <% end %>
</div>
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-3">
        <ul class="nav nav-pills flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="#personal" data-toggle="tab">
              <%= t('.personal') %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#document" data-toggle="tab">
              <%= t('.document') %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#address" data-toggle="tab">
              <%= t('.address') %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#bank_accounts" data-toggle="tab">
              <%= t('.bank_accounts') %>
            </a>
          </li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="tab-content">
          <div class="tab-pane fade show active" id="personal">
            <%= render partial: 'drivers/components/personal_information' %>
          </div>
          <div class="tab-pane fade show" id="document">
            <%= render partial: 'drivers/components/document' %>
          </div>
          <div class="tab-pane fade" id="address">
            <%= render partial: 'drivers/components/address' %>
          </div>
          <div class="tab-pane fade" id="bank_accounts">
            <% if @driver.person.bank_accounts.present? %>
              <%= render partial: 'drivers/components/bank_account' %>
            <% else %>
              <h4>Motorista não possui contas bancárias cadastradas</h4>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
