<h5 class="text-divider">
  <span><%= t('.personal') %></span>
</h5>
<div class="col-lg-12">
  <%= form.label(:enterprise) %></br>
  <%= form.collection_select(:enterprise_id, @enterprise, :id, :formatted_enterprises, { include_blank: 'Selecione uma empresa' }, { class: 'select2_single form-control', required: true }) %>
</div>
<%= render 'layouts/forms/person_form', person_form: person_form %>
<div class="col-lg-12 custom-control custom-switch">
  <%= form.label(:is_employee) %>?
  <%= form.check_box(:is_employee, class: "custom-control-input", id: "is_employee_switch") %></br>
  <label style="font-size: 13px">Não</label>
  <label class="custom-control-label switch-user" for="is_employee_switch"></label>
  <label style="font-size: 13px">Sim</label>
</div>
<div class="col-lg-12 custom-control custom-switch">
  <%= form.label(:is_blocked) %>?
  <%= form.check_box(:is_blocked, class: "custom-control-input", id: "is_blocked_switch") %></br>
  <label style="font-size: 13px">Não</label>
  <label class="custom-control-label switch-user" for="is_blocked_switch"></label>
  <label style="font-size: 13px">Sim</label>
</div>
<h5 class="text-divider">
  <span><%= t('.documents') %></span>
</h5>
<div class="col-lg-12">
  <%= form.label(:cnh_number) %>
  <%= form.number_field(:cnh_number, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:cnh_record) %>
  <%= form.number_field(:cnh_record, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:cnh_type) %>
  <%= form.select(:cnh_type, Driver::CNH_TYPES, { include_blank: 'Selecione a categoria' }, { class: 'select2_single form-control', required: true }) %>
</div>
<div class="col-lg-12">
  <%= form.label(:cnh_issuing_body) %>
  <%= form.select(:cnh_issuing_body, Address::STATES, { include_blank: 'Selecione um estado' }, { class: 'select2_single form-control', required: true }) %>
</div>
<div class="col-lg-12">
  <%= form.label(:cnh_expires_at) %>
  <%= form.date_field(:cnh_expires_at, class: 'form-control form-control-user', required: true) %>
</div>
<h5 class="text-divider">
  <span><%= t('.address') %></span>
</h5>
<%= render 'layouts/forms/address_form', address_form: address_form %>
<h5 class="text-divider">
  <span><%= t('.bank_accounts') %></span>
</h5>
<%= render 'layouts/forms/bank_account_form', person_form: person_form %>
