<% @truckload.comments.includes(:user).order(created_at: :desc).each do |comment| %>
  <div class="col-12 registration-timeline">
    <div class="vertical-point reg-active"></div>
    <div class="vertical-bar reg-active"></div>
    <div class="col-12 reg-event-container">
      <div class="time captalize">
        <%= l(comment.created_at, format: :with_full_hour_and_day) %> - (HÃ¡ <%= time_ago_in_words(comment.created_at) %>)
      </div>
      <p><%= comment.description %></p>
      <p><%= t('truckloads.show.updated_by') %>: <%= comment.user.person.full_name %></p>
      <% if comment.attachment.present? %>
        <div class="attachment">
          <%= link_to(comment.attachment.url,
                      download: "Monitoramento-DT-#{@truckload.dt_number}",
                      target: '_blank',
                      rel: 'noopener') do %>
            <i class="fas fa-eye"></i>
            <%= t('truckloads.show.view_attachment') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
