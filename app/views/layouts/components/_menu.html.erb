<%= link_to dashboard_index_path, class: 'list-group-item list-group-item-action',
                                  style: "color: #{current_user.enterprise.secondary_color};
                                          background-color: #{current_user.enterprise.primary_color} !important" do %>
  <i class="fas fa-chart-bar"></i>
  <span><%= t('layouts.application.dashboard') %></span>
<% end %>
<% if can?(:read, Truckload) || can?(:read, Cte) %>
  <div class="text-center">
    <%= t('layouts.application.operational') %>
  </div>
<% end %>
<% if can?(:read, Truckload) %>
  <%= link_to truckloads_index_path, class: 'list-group-item list-group-item-action',
                                     style: "color: #{current_user.enterprise.secondary_color};
                                             background-color: #{current_user.enterprise.primary_color} !important" do %>
    <i class="fas fa-truck"></i>
    <span><%= t('layouts.application.truckload') %></span>
  <% end %>
<% end %>
<% if can?(:read, Cte) %>
  <%= link_to ctes_index_path, class: 'list-group-item list-group-item-action',
                               style: "color: #{current_user.enterprise.secondary_color};
                                       background-color: #{current_user.enterprise.primary_color} !important" do %>
    <i class="fas fa-file"></i>
    <span><%= t('layouts.application.cte') %></span>
  <% end %>
<% end %>
<% if can?(:read, User) || can?(:read, Client) || can?(:read, Enterprise) || can?(:read, User::Role) %>
  <div class="text-center">
    <%= t('layouts.application.register') %>
  </div>
<% end %>
<% if can?(:read, User) %>
  <%= link_to admins_users_index_path, class: 'list-group-item list-group-item-action',
                                       style: "color: #{current_user.enterprise.secondary_color};
                                               background-color: #{current_user.enterprise.primary_color} !important" do %>
    <i class="fas fa-users"></i>
    <span><%= t('layouts.application.users') %></span>
  <% end %>
<% end %>
<% if can?(:read, User::Role) %>
  <%= link_to user_roles_index_path, class: 'list-group-item list-group-item-action',
                                      style: "color: #{current_user.enterprise.secondary_color};
                                              background-color: #{current_user.enterprise.primary_color} !important" do %>
    <i class="fas fa-users-cog"></i>
    <span><%= t('layouts.application.user_roles') %></span>
  <% end %>
<% end %>
<% if can?(:read, Client) %>
  <%= link_to clients_index_path, class: 'list-group-item list-group-item-action',
                                         style: "color: #{current_user.enterprise.secondary_color};
                                                 background-color: #{current_user.enterprise.primary_color} !important" do %>
    <i class="fas fa-building"></i>
    <span><%= t('layouts.application.clients') %></span>
  <% end %>
<% end %>
<% if can?(:read, Enterprise) %>
  <%= link_to super_admins_enterprises_index_path, class: 'list-group-item list-group-item-action',
                                                   style: "color: #{current_user.enterprise.secondary_color};
                                                           background-color: #{current_user.enterprise.primary_color} !important" do %>
    <i class="fas fa-building"></i>
    <span><%= t('layouts.application.company') %></span>
  <% end %>
<% end %>
