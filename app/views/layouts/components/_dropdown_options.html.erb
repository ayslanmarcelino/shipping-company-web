<% if user_owner?(current_user) || user_master?(current_user) %>
  <%= link_to edit_admins_enterprise_path(current_user.enterprise), class: 'dropdown-item' do %>
    <i class="fas fa-building fa-sm fa-fw mr-2 text-gray-400"></i>
    <%= t('layouts.application.my_enterprise') %>
  <% end %>
<% end %>
<%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
  <i class="fas fa-edit fa-sm fa-fw mr-2 text-gray-400"></i>
  <%= t('layouts.application.my_profile') %>
<% end %>
<%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
  <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
  <%= t('layouts.application.exit') %>
<% end %>
