<div class="container h-100">
  <div class="d-flex justify-content-center h-100">
    <div class="user-card">
      <div>
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.email_field(:email, autofocus: true, class: 'form-control input-pass', placeholder: t('.email'), autocomplete: "email") %>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-append">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field(:password, class: 'form-control input-pass', placeholder: t('.password'), autocomplete: "current-password") %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <div class="custom-control custom-checkbox">
                <%= f.check_box(:remember_me, class: 'custom-control-input') %>
                <%= f.label(:remember_me, class: 'custom-control-label') %>
              </div>
            </div>
          <% end %>
          <div class="d-flex justify-content-center mt-3 login-container">
            <%= f.submit(t('.login'), class: 'btn btn-sm login-btn') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
