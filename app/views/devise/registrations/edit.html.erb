<div class="text-center">
  <h4><%= t('devise.registrations.edit_my_profile') %></h4>
</div>
<div class="container h-100">
  <%= render partial: 'admins/users/components/errors.html.erb' %>
  <div class="d-flex justify-content-center h-100">
    <div class="user-card-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |form| %>
        <div class="col-lg-12">
          <%= form.label(:first_name) %>
          <%= form.text_field(:first_name, class: 'form-control form-control-user', required: true) %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:last_name) %>
          <%= form.text_field(:last_name, class: 'form-control form-control-user', required: true) %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:nickname) %>
          <%= form.text_field(:nickname, class: 'form-control form-control-user') %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:document_number) %>
          <%= form.number_field(:document_number, class: 'form-control form-control-user', required: true) %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:new_password) %>
          <%= form.password_field(:password, class: 'form-control form-control-user') %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:password_confirmation) %>
          <%= form.password_field(:password_confirmation, class: 'form-control form-control-user') %>
        </div>
        <div class="row btn-actions">
          <div class="col-lg-6 mt-3">
            <%= link_to t('devise.registrations.cancel'), dashboard_index_path, class: 'btn btn-danger btn-user btn-block' %>
          </div>
          <div class="col-lg-6 mt-3">
            <button type="button" class="btn btn-primary btn-user btn-block" data-toggle="modal" data-target="#modalPassword">
              <%= t('devise.registrations.edit_profile') %>
            </button>
          </div>
        </div>
        <div class="modal fade" id="modalPassword">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"><%= t('.confirm_password') %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="form-group col-md-12">
                  <%= form.label(:current_password) %>
                  <%= form.password_field(:current_password, class: 'form-control form-control-user') %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('.cancel') %></button>
                <%= form.submit(t('.confirm'), class: 'btn btn-success') %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>