<div class="text-center">
  <h4><%= t('.registered_users') %></h4>
</div>
<%= render partial: 'layouts/filter', locals: { url: users_path } %>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div class="row">
        <div class="col-sm-12">
          <table id="table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t('.id')%></th>
                <th><%= t('.name')%></th>
                <th><%= t('.nickname')%></th>
                <th><%= t('.document_number')%></th>
                <th><%= t('.email')%></th>
                <th><%= t('.roles')%></th>
                <% if user_master?(current_user) %>
                  <th><%= t('.enterprise')%></th>
                <% end %>
                <th><%= t('.actived')%></th>
                <th class="no-sort table-buttons">
                  <% if can?(:create, User) %>
                    <%= link_to new_user_path(@user), class: 'btn btn-sm btn-success btn-circle' do %>
                      <i class="fas fa-plus"></i>
                    <% end %>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.person.first_name %> <%= user.person.last_name %></td>
                  <td><%= user.person.nickname %></td>
                  <td><%= format_document_number(user.person.document_number) %></td>
                  <td><%= user.email %></td>
                  <td><%= I18n.t(user.all_roles, scope: 'activerecord.attributes.user/role.kinds').join(', ') %></td>
                  <% if user_master?(current_user) %>
                    <td><%= user.enterprise.company_name %></td>
                  <% end %>
                  <td class="text-center">
                    <span class="badge badge-<%= boolean_color(user.is_active) %>">
                      <%= translate_boolean(user.is_active) %>
                    </span>
                  </td>
                  <td class="table-buttons">
                    <% if can?(:read, User) %>
                      <%= link_to user_path(user), class: 'btn btn-sm btn-dark' do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                    <% end %>
                    <% if can?(:update, User) %>
                      <%= link_to edit_user_path(user), class: 'btn btn-sm btn-info btn-circle' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                    <% end %>
                    <% if can?(:destroy, User) %>
                      <%= link_to user_path(user),
                          method: :delete,
                          class: 'btn btn-sm btn-danger btn-circle',
                          data: { confirm: "#{t('.delete_confirm')}: #{user.person.first_name} #{user.person.last_name}?" } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
