<div class="col-xs-12 text-center">
  <h4><%= t('.view') %>: <%= @client.company_name %></h4>
</div>
<div class="col-xs-12 mb-2">
  <%= link_to :back, class: 'col-xs-3 btn btn-secondary btn-sm  btn-user' do %>
    <i class="fas fa-arrow-left"></i>
    <%= t('.back') %>
  <% end %>
  <% if can?(:update, Client) %>
    <%= link_to edit_client_path(@client), class: 'col-xs-3 btn btn-info btn-sm' do %>
      <i class="fas fa-edit"></i>
      <%= t('.edit') %>
    <% end %>
  <% end %>
  <% if can?(:destroy, Client) %>
    <%= link_to client_path(@client),
                method: :delete,
                class: 'btn btn-sm btn-danger',
                data: { confirm: "#{t('.delete_confirm')}: #{@client.company_name}?" } do %>
      <i class="fas fa-trash"></i>
      <%= t('.delete') %>
    <% end %>
  <% end %>
</div>
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-3">
        <ul class="nav nav-pills flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="#general" data-toggle="tab" role="tab" aria-selected="true">
              <%= t('.general') %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#address" data-toggle="tab" role="tab" aria-selected="false">
              <%= t('.address') %>
            </a>
          </li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="tab-content">
          <div class="tab-pane fade show active" id="general">
            <%= render partial: 'clients/components/general_information' %>
          </div>
          <div class="tab-pane fade" id="address">
            <%= render partial: 'clients/components/address' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
