<div class="text-center">
  <h4>
    <% if user_owner?(current_user) %>
      <%= t('.list_enterprise') %>: <%= current_user.enterprise.company_name %>
    <% elsif user_master?(current_user) %>
      <%= t('.list') %>
    <% else %>
      <%= t('.list_user') %>: <%= current_user.first_name %>
    <% end %>
  </h4>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <div class="row">
        <div class="col-sm-12">
          <table id="table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t('.cte_number') %></th>
                <th><%= t('.value') %></th>
                <th><%= t('.client') %></th>
                <th><%= t('.created_at') %></th>
                <th><%= t('.linked_truckload') %></th>
                <% if user_owner?(current_user) || user_master?(current_user) %>
                  <th><%= t('.created_by') %></th>
                <% end %>
                <% if user_master?(current_user) %>
                  <th><%= t('.enterprise') %></th>
                <% end %>
                <th class="no-sort table-buttons">
                  <%= link_to new_cte_path(@cte), class: 'btn btn-success btn-circle' do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @ctes.each do |cte| %>
                <tr role="row" class="odd">
                  <td><%= cte.cte_number %></td>
                  <td><%= number_to_currency(cte.value) %></td>
                  <td><%= cte.truckload_client %></td>
                  <td><%= l(cte.created_at, format: '%d/%m/%Y Ã s %H:%M') %></td>
                  <td>
                    <%= link_to truckload_path(cte.truckload.id) do %>
                      <li><%= cte.truckload.dt_number %></li>
                    <% end %>
                  </td>
                  <% if user_owner?(current_user) || user_master?(current_user) %>
                    <td><%= cte.user.first_name %> <%= cte.user.last_name %></td>
                  <% end %>
                  <% if user_master?(current_user) %>
                    <td><%= cte.user.enterprise.company_name %></td>
                  <% end %>
                  <td>
                    <% if can?(:read, Cte) %>
                      <%= link_to cte_path(cte), class: 'btn btn-dark' do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                    <% end %>
                    <% if can?(:update, Cte) %>
                      <%= link_to edit_cte_path(cte), class: 'btn btn-info btn-circle' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                    <% end %>
                    <% if can?(:destroy, Cte) %>
                      <%= link_to cte_path(cte), method: :delete, class: 'btn btn-danger btn-circle', data: { confirm: "#{t('.delete_confirm')}: #{cte.cte_number} associado a carga #{cte.truckload.dt_number}?"} do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <% if @ctes.empty? %>
    <tr><%= t('.no_data') %></tr>
  <% end %>
</div>
