<div class="col-lg-12">
  <%= form.label(:company_name) %>
  <%= form.text_field(:company_name, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:fantasy_name) %>
  <%= form.text_field(:fantasy_name, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:document_number) %>
  <%= form.number_field(:document_number, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:email) %>
  <%= form.email_field(:email, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:opening_date) %>
  <%= form.date_field(:opening_date, class: 'form-control form-control-user mb-2', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:primary_color) %>
  <%= form.color_field(:primary_color, required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:secondary_color) %>
  <%= form.color_field(:secondary_color, required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:logo) %>
  <%= form.file_field(:logo, accept: 'image/png, image/jpeg, image/jpg') %>
</div>
<div class="col-lg-12 custom-switch mt-2">
  <%= form.label(:is_active) %>?
  <%= form.check_box(:is_active, class: "custom-control-input", id: "is_active_switch") %>
  <label class="custom-control-label switch-user" for="is_active_switch"></label>
</div>
