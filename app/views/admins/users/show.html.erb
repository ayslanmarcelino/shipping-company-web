<div class="col-xs-12 text-center">
  <h4><%= t('.view') %>: <%= @user.person.full_name %></h4>
</div>
<div class="col-xs-12 mb-2">
  <%= link_to :back, class: 'col-xs-3 btn btn-secondary btn-sm  btn-user' do %>
    <i class="fas fa-arrow-left"></i>
    <%= t('.back') %>
  <% end %>
  <% if can?(:update, User) %>
    <%= link_to edit_admins_user_path(@user), class: 'col-xs-3 btn btn-info btn-sm  ' do %>
      <i class="fas fa-edit"></i>
      <%= t('.edit') %>
    <% end %>
  <% end %>
  <% if can?(:destroy, User) %>
    <%= link_to admins_user_path(@user), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: "#{t('.delete_confirm')}: #{@user.person.first_name} #{@user.person.last_name}?" } do %>
      <i class="fas fa-trash"></i>
      <%= t('.delete') %>
    <% end %>
  <% end %>
</div>
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-3">
        <ul class="nav nav-pills flex-column" id="cardPillVertical" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="overview-pill-vertical" href="#personal" data-toggle="tab" role="tab" aria-controls="overview" aria-selected="true">
              <%= t('.personal') %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="overview-pill-vertical" href="#document" data-toggle="tab" role="tab" aria-controls="overview" aria-selected="true">
              <%= t('.document') %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="example-pill-vertical" href="#address" data-toggle="tab" role="tab" aria-controls="example" aria-selected="false">
              <%= t('.address') %>
            </a>
          </li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="tab-content" id="cardPillContentVertical">
          <div class="tab-pane fade show active" id="personal" role="tabpanel" aria-labelledby="overview-pill-vertical">
            <table class="table">
              <tr>
                <th><%= t('.full_name') %></th>
                <td><%= @user.person.full_name %></td>
              </tr>
              <tr>
                <th><%= t('.nickname') %></th>
                <td><%= @user.person.nickname %></td>
              </tr>
              <tr>
                <th><%= t('.email') %></th>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <th><%= t('.birth_date') %></th>
                <td><%= l(@user.person.birth_date, format: :date) %></td>
              </tr>
              <tr>
                <th><%= t('.phone_number') %></th>
                <td><%= @user.person.phone_number %></td>
              </tr>
              <tr>
                <th><%= t('.telephone_number') %></th>
                <td><%= @user.person.telephone_number %></td>
              </tr>
            </table>
          </div>
          <div class="tab-pane fade show" id="document" role="tabpanel" aria-labelledby="overview-pill-vertical">
            <table class="table">
              <tr>
                <th><%= t('.document_number') %></th>
                <td><%= @user.person.document_number %></td>
              </tr>
              <tr>
                <th><%= t('.rg') %></th>
                <td><%= @user.person.rg %></td>
              </tr>
              <tr>
                <th><%= t('.rg_issuing_body') %></th>
                <td><%= @user.person.rg_issuing_body %></td>
              </tr>
            </table>
          </div>
          <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="example-pill-vertical">
            <table class="table">
              <tr>
                <th><%= t('.address_zip_code') %></th>
                <td><%= @user.person.address.zip_code %></td>
              </tr>
              <tr>
                <th><%= t('.address_street') %></th>
                <td><%= @user.person.address.street %></td>
              </tr>
              <tr>
                <th><%= t('.address_number') %></th>
                <td><%= @user.person.address.number %></td>
              </tr>
              <tr>
                <th><%= t('.address_complement') %></th>
                <td><%= @user.person.address.complement %></td>
              </tr>
              <tr>
                <th><%= t('.address_neighborhood') %></th>
                <td><%= @user.person.address.neighborhood %></td>
              </tr>
              <tr>
                <th><%= t('.address_city') %></th>
                <td><%= @user.person.address.city %></td>
              </tr>
              <tr>
                <th><%= t('.address_state') %></th>
                <td><%= @user.person.address.state %></td>
              </tr>
              <tr>
                <th><%= t('.address_country') %></th>
                <td><%= @user.person.address.country %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
