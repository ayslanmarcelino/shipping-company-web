<div class="col-lg-12">
  <%= form.label(:first_name) %>
  <%= form.text_field(:first_name, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:last_name) %>
  <%= form.text_field(:last_name, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:nickname) %>
  <%= form.text_field(:nickname, class: 'form-control form-control-user') %>
</div>
<div class="col-lg-12">
  <%= form.label(:email) %>
  <%= form.email_field(:email, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12">
  <%= form.label(:document_number) %>
  <%= form.number_field(:document_number, class: 'form-control form-control-user', required: true) %>
</div>
<div class="col-lg-12 custom-switch mt-2">
  <%= form.label(:is_active) %>?
  <%= form.check_box(:is_active, class: "custom-control-input", id: "is_active_switch") %>
  <label class="custom-control-label switch-user" for="is_active_switch"></label>
</div>
<div class="col-lg-12 custom-switch mt-2">
  <%= form.label(:is_admin) %>?
  <%= form.check_box(:is_admin, class: "custom-control-input", id: "is_admin_switch") %>
  <label class="custom-control-label switch-user" for="is_admin_switch"></label>
</div>
<div class="col-lg-12">
  <%= form.label(:password) %>
  <%= form.password_field(:password, class: 'form-control form-control-user') %>
</div>
<div class="col-lg-12">
  <%= form.label(:password_confirmation) %>
  <%= form.password_field(:password_confirmation, class: 'form-control form-control-user') %>
</div>
