<div class="text-center">
  <h4><%= t('.edit_my_enterprise') %></h4>
</div>
<div class="container h-100">
  <%= render partial: 'super_admins/enterprises/components/errors.html.erb' %>
  <div class="d-flex justify-content-center h-100">
    <div class="user-card-form">
      <%= form_with(model: [:admins, @enterprise], local: true) do |form| %>
        <div class="col-lg-12 mb-2">
          <%= form.label(:fantasy_name) %>
          <%= form.text_field(:fantasy_name, class: 'form-control form-control-user', required: true) %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:primary_color) %>
          <%= form.color_field(:primary_color, required: true) %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:secondary_color) %>
          <%= form.color_field(:secondary_color, required: true) %>
        </div>
        <div class="col-lg-12">
          <%= form.label(:logo) %>
          <%= form.file_field(:logo, key: :file, col: 'md-3', input_opts: { as: :select2 }) %>
        </div>
        <div class="row btn-actions">
          <div class="col-lg-6 mt-3">
            <%= link_to t('devise.registrations.cancel'), dashboard_index_path, class: 'btn btn-sm btn-danger btn-user btn-block' %>
          </div>
          <div class="col-lg-6 mt-3">
            <button class="btn btn-primary btn-sm btn-block">
              <%= t('.edit') %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
